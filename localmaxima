#include <stdio.h>
int main()
{
    int a[20],n;
    printf("enter the array size");
    scanf("%d",&n);
    printf("enter the array elments");
    for(int i=0;i<n;i++)
    scanf("%d",&a[i]);
    for(int i=0;i<n;i++)
    if(i==0&&a[i]>a[i+1])
    printf("%d",a[i]);
    else if(i==n-1&&a[i]>a[i-1])
    printf("%d",a[i]);
    else if(a[i]>a[i+1]&&a[i]>a[i-1])
    printf("%d",a[i]);
}
